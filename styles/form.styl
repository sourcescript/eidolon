label
  display inline-block
  width 100%
  // Force IE8 to wrap long content (see https//github.com/twbs/bootstrap/issues/13141)
  margin-bottom 5px
  font-weight bold

.form-group
  margin-bottom 20px

.form-control
  display block
  width 100%
  height unit(line-height-computed + padding-base-vt, px) // Make inputs at least the height of their button counterpart (base line-height + padding + border)
  padding unit(input-padding, px)
  font-size unit(font-size-base, px)
  line-height line-height-base
  color unquote(input-color)
  background-color #fff
  background-image none // Reset unusual Firefox-on-Android default style see https//github.com/necolas/normalize.css/issues/214
  border 1px solid unquote(input-color)
  border-radius unit(border-radius-base, px) // Note This has no effect on <select>s in some browsers, due to the limited stylability of <select>s in CSS.

// Reset height for `textarea`s
textarea.form-control
  height auto

.form-control-static
  // Size it appropriately next to real form controls
  padding unit(input-padding, px) 0
  // Remove default margin from `p`
  margin-bottom: 0;
  min-height: unit(line-height-computed + padding-base-vt, px);

  &.input-lg,
  &.input-sm
    padding-left: 0;
    padding-right: 0;
